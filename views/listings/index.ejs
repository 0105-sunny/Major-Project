   <style>
    .filter {
      margin-top: 1rem;
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      margin-bottom: 0.5rem;
      opacity: 0.7;
      
    }

    .filter p {
      font-size:0.8rem ;
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    #filters {
      display: flex;
