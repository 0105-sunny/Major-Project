    }
   </style>

   <div id="filters">
     <div class="filter"> 
       <div><i class="fa-solid fa-fire"></i><br></div>
       <p> Trending </p>
     </div>
     <div class="filter"> 
       <div><i class="fa-solid fa-mountain-city"></i></div>
       <p> rooms </p>
     </div>
     <div class="filter"> 
       <div><i class="fa-solid fa-fire"></i><br></div>
       <p> iconic cities  </p>
     </div>
     <div class="filter"> 
       <div><i class="fa-solid fa-bed"></i></div>
       <p> rooms </p>
     </div>
     <div class="filter"> 
       <div><i class="fa-solid fa-mountain"></i><br></div>
       <p> moutains </p>
     </div>
     <div class="filter"> 
       <div><i class="fa-brands fa-fort-awesome"></i></div>
       <p> Castles </p>
     </div>
     <div class="filter"> 
       <div><i class="fa-regular fa-snowflake"></i><br></div>
       <p> Archtic </p>
     </div>
     <div class="filter"> 
       <div> <i class="fa-solid fa-campground"></i></div>
       <p> Camping </p>
     </div>
     <div class="filter"> 
       <div><i class="fa-solid fa-cow"></i><br></div>
       <p> Farms </p>
     </div>
     <div class="filter"> 
       <div> <i class="fa-solid fa-igloo"></i></div>
       <p> Dom </p>
     </div>
